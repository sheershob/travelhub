<% layout('layouts/boilerplate') -%>
<div class="row mt-4">
    <div class="col-8 offset-2">     

    <h3>Edit your listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="required">Title</label>
        <input name="listing[title]" class="form-control" value="<%= listing.title %>" type="text" required/>
        <div class="invalid-feedback">
          Please provide a title.
        </div>
      </div>      
      <br>

      <div class="mb-3">
        <label for="description" class="required">Description</label>
        <textarea name="listing[description]" class="form-control" minlength="20" maxlength="500" required><%= listing.description %></textarea>
        <div class="invalid-feedback">
          Please provide a description.
        </div>
      </div>      
      <br> 

      <div class="mb-3">
        <label for="">Image URL</label>
        <input name="listing[image]" class="form-control" value="<%= listing.image %>" type="text" placeholder="Image URL" />
      </div>
      <br>

      <div class="row">      
      <div class="mb-3 col-md-4" >
        <label for="price" class="required">Price</label>
        <input name="listing[price]" min="100" class="form-control" required value="<%= listing.price %>" type="number"/>
        <div class="invalid-feedback">
          Please provide a price.
        </div>
      </div>      
      <br>

      <div class="mb-3 col-md-8">
        <label for="country" class="required">Country</label>

        <select name="country" id="country" class="form-select" required>
            <option value="" selected><%=listing.country%></option>
                <% for(let country of countries){ %>
                    <option value="<%= country %>"><%= country %></option>
                <% } %>
        </select>        
        <div class="invalid-feedback">
          Please provide a country.
        </div>
      </div> 
      </div>     
      <br>

      <div class="mb-3 col-md-8">
        <label for="location" class="required">Location</label>
        <input
        name="listing[location]" class="form-control"
        value="<%= listing.location %>"
        type="text"
        required/>
        <div class="invalid-feedback">
          Please provide a location.
        </div>
      </div>      
      <br>

        <button class="btn btn-dark" type="submit">Update Listing</button>
        <br><br>
    </form>
    </div>
</div>