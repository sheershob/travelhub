<% layout('layouts/boilerplate') -%>

<body>
    <br>
    <h2>Create a new listing</h2>
    <form action="/listings" method="post" enctype="multipart/form-data" novalidate class="needs-validation">
        <div class="col-10">
            <label for="title" class="required">Title:</label>
            <input type="text" id="title" class="form-control" name="title" required>
            <div class="invalid-feedback">
              Please provide a valid title.
            </div>
            <br>
        </div>
        
        <div>
            <label for="description" class="required">Description:</label>
            <textarea id="description" class="form-control" name="description" placeholder="Min length is 20 characters" minlength="20" maxlength="500" required></textarea>
            <div class="invalid-feedback">
              Please provide a valid description.
            </div>
            <br>
        </div>

        <div>
            <label for="image" class="required">Upload Listing Image:</label>
            <input type="file" id="image" class="form-control" required
            name="image" accept="image/png, image/jpeg, image/jpg, image/webp"><br>
        </div>

        <div class="col-10">
            <label for="location" class="required">Location:</label>
            <input type="text" id="location" class="form-control" name="location" required>
            <div class="invalid-feedback">
                Please provide a valid location.
            </div>
            <br>
        </div>
                
        <div class="col-md-4">
            <label for="country" class="required">Country:</label>
            <select name="country" id="country" class="form-select" required>
                <option value="" disabled selected>Select your country</option>
                    <% for(let country of countries){ %>
                        <option value="<%= country %>"><%= country %></option>
                    <% } %>
            </select>
            <br>
        </div>
        
        <div class="col-md-2">
            <label for="price" class="required">Price per night (in â‚¹):</label>
            <input type="number" id="price" class="form-control" min="100" name="price" required>
            <div class="invalid-feedback">
                Please provide a valid price.
            </div>
            <br>
        </div>        

        <button class="btn btn-dark" type="submit">Create Listing</button>
        <br><br>
    </form>
</body>