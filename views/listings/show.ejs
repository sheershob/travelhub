<% layout('layouts/boilerplate') -%>
<div class="row mt-3">
    <div class="col-8 offset-2 mt-3">

    <h3> <b><%= listing.title %></b> </h3>
    <div class="card listing-card mb-3">
        <img src="<%= listing.image.url %>" class="card-img-top show-img border-2" alt="Listing Image">
            <div class="card-body">
                <p class="card-text mt-2 px-4"> 
                     <br>
                    by <b> <%= listing.owner.username %> </b> <br>
                    <%= listing.description %> <br>
                    <%= listing.location %>, <%= listing.country %> <br>
                    â‚¹<%= listing.price.toLocaleString("en-IN") %> per night
                </p>
            </div>
    </div>
    <div >
        <% if(listing.owner._id.equals(currentUser?._id)) { %>
            <a href="<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
            <form action="/listings/<%= listing.id %>/?_method=DELETE" method="POST">
                <button class="btn btn-danger mt-3 mb-5">Delete </button>
            </form>
        <% } %>
    </div>

    <div class="col-12 mt-3 mb-3">
        <hr>
        <% if(listing.reviews.length === 0) { %>
            <h4 class="mt-5">No reviews yet</h4>
        <% } else{ %>
        <h4 class="mt-5">Reviews</h4>
        <% } %>
        <div class="row">
            <% for(let review of listing.reviews){ %>
                
                <div class="card mb-3 col-5 me-3 ms-3">
                    <div class="card-body">
                        <!-- <h5 class="card-title"> <%= review.author.username %></h5> -->
                        <h5 class="card-title mt-2 mb-0"> <%= review.author.username %> <%= review.rating %> <i class="fa-solid fa-star" style="color: #FFD43B;"></i></h5>
                        <div class="card-text mt-0 mb-1"> <i><%= review.createdAt.toLocaleString('en-US',{ month: 'short', year: 'numeric' }) %> </i> </div>
                        <p class="card-text mb-1"><%= review.comment %></p>
                    </div>
            <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="">
                    <button class="mb-2 btn btn-sm btn-dark">Delete</button>
                </form>
            <% } %>
                </div>
            <% } %>
    </div>

    <% if(currentUser) { %>
    <div class="col-12 mt-3 mb-3">
        <hr>
        <h4>Add a review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
                        
                        <fieldset class="starability-grow" aria-label="Rating" aria-required="true">
                            <legend class="visually-hidden">Rating</legend>
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" required />
                            <label for="first-rate1" title="1 star">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="2 stars">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="3 stars">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="4 stars">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="5 stars">5 stars</label>
                            <input type="radio" id="first-rate6" name="review[rating]" value="6" />
                            <label for="first-rate6" title="6 stars">6 stars</label>
                            <input type="radio" id="first-rate7" name="review[rating]" value="7" />
                            <label for="first-rate7" title="7 stars">7 stars</label>
                            <input type="radio" id="first-rate8" name="review[rating]" value="8" />
                            <label for="first-rate8" title="8 stars">8 stars</label>
                            <input type="radio" id="first-rate9" name="review[rating]" value="9" />
                            <label for="first-rate9" title="9 stars">9 stars</label>
                            <input type="radio" id="first-rate10" name="review[rating]" value="10" />
                            <label for="first-rate10" title="10 stars">10 stars</label>
                    </fieldset>
                    <div class="invalid-feedback">
                        Please select a rating.
                    </div>
            <div>
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">
                    Please provide a comment
                </div>
            </div>
            <button type="submit" class="btn btn-dark mt-3 mb-5">Submit</button>
        </form>
    </div>
    <% } %>
    </div>
    </div>
</div>