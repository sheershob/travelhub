<% layout("layouts/boilerplate") -%>

<div class="row">
    <div class="col-6 offset-3">
        <h2 class="mt-4 mb-4">Login</h2>
        <form action="/auth/google">
        <a href="/auth/google" class="btn btn-light border mb-3 d-flex align-items-center justify-content-center gap-2 shadow-sm w-100">
            <img src="https://www.svgrepo.com/show/355037/google.svg" alt="Google Logo" width="25" height="25">
            <span>Login with Google</span>
        </a>
        </form>
        <h4 class="">OR</h4>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username">Username</label>
                <input name="username" type="text" id="username" class="form-control" required>
                <div class="invalid-feedback">
                    Please provide a username.
                </div>
            </div>
            <div class="mb-3">
                <label for="password">Password</label>
                <input name="password" type="password" id="password" class="form-control" required>
                <div class="invalid-feedback">
                    Please provide a password.
                </div>
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
        </form>
    </div>
</div>